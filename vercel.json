{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "./dist/public",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*", 
      "destination": "server/index.ts"   
    },
    { 
      "source": "/(.*)", 
      "destination": "/dist/public/index.html"
    }
  ]
}